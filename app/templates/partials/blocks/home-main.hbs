                </div>
                <div class="swiper-slide">
                  {{>components/image img="home/partners/04" ext="jpg"}}
                </div>
              </div>
            </div>
            <div class="home-partners__nav">
              {{>components/slider-nav nav-mode="center" class="js-slider-partners"}}
            </div>
          </div>
        {{/blocks/common/page-section}}
      </div>
    </div>
  </div>
</div>
